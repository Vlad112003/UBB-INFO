#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <sys/stat.h>
#include <string.h>

int main(int argc, char** argv){
int f[2],pid;
if(pipe(f)==-1){
        perror("pipe()");
        exit(EXIT_FAILURE);
}
pid=fork();
if(pid==-1){
        perror("fork()");
        exit(EXIT_FAILURE);
}
if(pid==0){
        //Procesul A
        FILE* fd=fopen(argv[1],"r");
        char c[100];
        int n;
        while(fscanf(fd,"%s",c)!=-1){
                n=strlen(c)+1;
                write(f[1],&n,sizeof(int));
                write(f[1],c,n*sizeof(char));
        }
        n=0;
        write(f[1],&n,sizeof(int));
        fclose(fd);
        close(f[0]);
        close(f[1]);
        exit(EXIT_SUCCESS);
}
wait(0);
pid=fork();
if(pid==-1){
        perror("fork()");
        exit(EXIT_FAILURE);
}
if(pid==0){
        //Procesul B
        int n,i=-1,j;
        char c[100][100];
        while(1){
                read(f[0],&n,sizeof(int));
                if(n==0)break;
                read(f[0],c[++i],n*sizeof(char));
        }
        i=-1;
        while(1){
                printf("[B] Numarul este: ");
                scanf("%d",&n);
                if(n==0)break;
                for(j=0;j<n;j++)
                        printf("%s ",c[++i]);
                printf("\n");
        }
        close(f[0]);
        close(f[1]);
        exit(EXIT_SUCCESS);
}
wait(0);
close(f[0]);
close(f[1]);
return 0;
}